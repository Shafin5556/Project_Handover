<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Quiz</title>
  <link rel="stylesheet" href="/styles/quiz.css">
</head>
<body>
  <div class="quiz-container">
    <header class="quiz-header">
      <h1>Take the Quiz</h1>
      <p>Answer the following questions to test your knowledge!</p>

      <!-- Logout Button -->
      <form action="/logout" method="POST" class="logout-form">
        <button type="submit" class="logout-btn">Logout</button>
      </form>
    </header>

    <form action="/submit-quiz" method="POST" class="quiz-form">
      <% questions.forEach((question, index) => { %>
        <div class="question-card">
          <p class="question-title"><%= index + 1 %>. <%= question.text %></p>
          <div class="options-container">
            <% question.options.forEach((option, optIndex) => { %>
              <div class="option-item">
                <input type="radio" id="q<%= question.id %>_opt<%= option.id %>" name="q<%= question.id %>" value="<%= option.id %>" required>
                <label for="q<%= question.id %>_opt<%= option.id %>"><%= option.text %></label>
              </div>
            <% }) %>
          </div>
        </div>
      <% }) %>

      <button type="submit" class="submit-btn">Submit Quiz</button>
    </form>
  </div>
</body>
</html>
